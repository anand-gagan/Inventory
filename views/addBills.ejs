<html>
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">   
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    </head>
    <body>

        <div class="container col-md-8">

            <br /> <br />

            <div class="inventory-data-form">
                <form class="form-control" id="itemForm">
                    
                    <div class="row mx-auto">
                        <div class="col-md-3">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#itemModal">
                                Add new Item
                            </button>
                        </div> 
                        <div class="col-md-3">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#vendorModal">
                                Add new Vendor
                            </button>
                        </div> 
                        <div class="col-md-3">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#clientModal">
                                Add new Client
                            </button>
                        </div> 
                        <div class="col-md-3">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" onclick="window.location.href='/register'">
                                Add new User
                            </button>
                        </div> <br /> <br /> <hr />
                        <div class="col-md-6">
                            <select class="form-control" id="vendorList" required>
                                <option value="blank" disabled  selected> -- Select Vendor -- </option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="form-control" id="date">
                        </div>
                    </div>

                    <br />

                    <div id="appendFields">
                        <div class="row mx-auto removeRow0">

                            <hr />

                            <div class="col-md-4">
                                <select class="form-control itemList" id="itemList0" required>
                                    <option value="blank" disabled selected> -- Select Item -- </option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <input type="number" placeholder="Quantity" id="quantity0" class="form-control" max="200" min="1" required>
                            </div>
    
                            <div class="col-md-4">
                                <select class="form-control location" id="location0" required>
                                    <option value="blank" disabled selected> -- Select User -- </option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <button type="button" style="min-width: 100%" class="btn btn-outline-danger" onclick="removeField(0)">
                                    Remove
                                </button>
                            </div>

                            <br /> <br />
                            
                        </div>
                        
                    </div>

                    <br />

                    <div class="row mx-auto">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-light form-control" onclick="addField()"> + Add more</button>
                        </div>
                    </div>

                    <br />

                    <div class="row mx-auto">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success form-control"> Submit </button>
                        </div>   
                    </div>
                </form>
            </div>
    
            <br /> <br />


            <!-- Modal -->
            <div class="modal fade" id="vendorModal" tabindex="-1" aria-labelledby="vendorModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="vendorModalLabel">Add new vendor</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="addVendorForm" action="#">
                                <input type="text" class="form-control" name="vendor" id="vendor" placeholder="Enter vendor name" required> <br />
                                <button type="submit" class="btn btn-success form-control" data-bs-dismiss="modal" aria-label="Close"> Add </button>  
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="clientModal" tabindex="-1" aria-labelledby="clientModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="clientModalLabel">Add new vendor</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="addClientForm" action="#">
                                <input type="text" class="form-control" name="client" id="client" placeholder="Enter Client name" required> <br />
                                <button type="submit" class="btn btn-success form-control" data-bs-dismiss="modal" aria-label="Close"> Add </button>  
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="itemModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="itemModalLabel">Add new item</h5>
                            <button type="button" id="close-item-modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="addItemForm" action="#">
                                <input type="text" class="form-control" name="item" id="item" placeholder="Enter item name" required> <br />
                                <button type="submit" class="btn btn-success    form-control" data-bs-dismiss="modal" aria-label="Close"> Add </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="js/script.js"></script>
        <script>
            let idx = 0;
            function addField() {
                idx++;
                let objTo = document.getElementById('appendFields')
                 let rowDiv = document.createElement('div');
                 rowDiv.setAttribute('class', 'row mx-auto removeRow' + idx);
                 rowDiv.innerHTML = '<hr /><div class="col-md-4"><select class="form-control itemList" id="itemList'+idx+'" required><option value="" disabled selected> -- Select Item -- </option></select></div><div class="col-md-2"><input type="number" placeholder="Quantity" id="quantity'+idx+'" class="form-control" max="20" min="0" required></div><div class="col-md-4"><select class="form-control location" id="location'+idx+'" required><option value="blank" disabled selected> -- Select User -- </option></select></div><div class="col-md-2"><button type="button" style="min-width: 100%" class="btn btn-outline-danger" onclick="removeField('+idx+')">Remove</button></div><br /> <br />';
                
                objTo.appendChild(rowDiv);
               //objTo.append('<div class="row mx-auto removeRow'+idx+'"><hr /><div class="col-md-4"><select class="form-control itemList" id="itemList'+idx+'"><option value="blank"> -- Select Item -- </option></select></div><div class="col-md-4"></div><div class="col-md-2"><input type="number" placeholder="Quantity" name="quantity'+idx+'" class="form-control" max="20" min="0"></div><div class="col-md-4"><input type="location" placeholder="Location" name="location'+idx+'" class="form-control"></div><div class="col-md-2"><button type="button" style="min-width: 100%" class="btn btn-outline-danger" onclick="removeField('+idx+')">Remove</button></div><br /> <br /></div>')
            }

            function removeField(num) {
                $('.removeRow' + num).remove();
            }

            $('#itemForm').submit(function(event) {
                event.preventDefault();
                var data = [];
                var j = 0;
                var vendor = document.getElementById('vendorList');
                var date = document.getElementById('date');
                for(var i = 0; i <= idx; i ++){
                    var obj = {};
                    var item = document.getElementById('itemList'+i);
                    var qua = document.getElementById('quantity'+i);
                    var loc = document.getElementById('location'+i);

                    if(item != null && qua != null && loc != null){
                        obj.itemId = item.value;
                        obj.quantity = qua.value;
                        obj.location = loc.value;
                        obj.vendorId = vendor.value;
                        obj.date = date.value;

                        data[j] = obj;
                        j++;
                    }

                }
                console.log(data);
                $.ajax({
                    url: '/save',
                    type: 'POST',
                    data: {data: JSON.stringify(data)},
                    success: function(result) {
                        alert('ok');
                        window.location.reload();
                    },
                    error: function(result) {
                        alert('error');
                    }
                });
            })
        </script>
       
    </body>
</html>
