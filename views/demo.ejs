<html>
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">   
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    </head>
    <body>

        <div class="container col-md-8">

            <br /> <br />

            <div class="inventory-data-form">
                <form class="form-control" id="itemForm">
                    
                    <div class="row mx-auto">
                        <div class="col-md-6">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#itemModal">
                                Add new Item
                            </button>
                        </div> 
                        <div class="col-md-6">
                            <button type="button" style="min-width: 100%" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#vendorModal">
                                Add new Vendor
                            </button>
                        </div> <br /> <br /> <hr />
                        <div class="col-md-6">
                            <select class="form-control" id="vendorList">
                                <option value="blank"> -- Select Vendor -- </option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="form-control">
                        </div>
                    </div>

                    <br />

                    <div id="appendFields">
                        <div class="row mx-auto removeRow0">

                            <hr />

                            <div class="col-md-4">
                                <select class="form-control" id="itemList">
                                    <option value="blank"> -- Select Item -- </option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="number" placeholder="Quantity" name="quantity0" class="form-control" max="20" min="0">
                            </div>
    
                            <div class="col-md-4">
                                <input type="location" placeholder="Location" name="location0" class="form-control">
                            </div>

                            <div class="col-md-2">
                                <button type="button" style="min-width: 100%" class="btn btn-outline-danger" onclick="removeField(0)">
                                    Remove
                                </button>
                            </div>

                            <br /> <br />
                            
                        </div>
                        
                    </div>

                    <br />

                    <div class="row mx-auto">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-light form-control" onclick="addField()"> + Add more</button>
                        </div>
                    </div>

                    <br />

                    <div class="row mx-auto">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success form-control"> Submit </button>
                        </div>   
                    </div>
                </form>
            </div>
    
            <br /> <br />


            <!-- Modal -->
            <div class="modal fade" id="vendorModal" tabindex="-1" aria-labelledby="vendorModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="vendorModalLabel">Add new vendor</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="addVendorForm" action="#">
                                <input type="text" class="form-control" name="vendor" id="vendor" placeholder="Enter vendor name" required> <br />
                                <button type="submit" class="btn btn-success form-control" data-bs-dismiss="modal" aria-label="Close"> Add </button>  
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="itemModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="itemModalLabel">Add new item</h5>
                            <button type="button" id="close-item-modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="addItemForm" action="#">
                                <input type="text" class="form-control" name="item" id="item" placeholder="Enter item name" required> <br />
                                <button type="submit" class="btn btn-success    form-control" data-bs-dismiss="modal" aria-label="Close"> Add </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="js/script.js"></script>
        <script>
            let idx = 1;
            function addField() {
                let objTo = document.getElementById('appendFields')
                let rowDiv = document.createElement('div');
                rowDiv.setAttribute('class', 'row mx-auto removeRow' + idx);
                rowDiv.innerHTML = '<hr /><div class="col-md-4"><select class="form-control itemList" id="itemList"><option> -- Select Item -- </option></select></div><div class="col-md-2"><input type="number" placeholder="Quantity" name="quantity' + idx + '" class="form-control" max="20" min="0"></div><div class="col-md-4"><input type="location" placeholder="Location" name="location' + idx + '" class="form-control"></div><div class="col-md-2"><button type="button" style="min-width: 100%" class="btn btn-outline-danger" onclick="removeField(' + idx + ')">Remove</button></div><br /> <br />';
                objTo.appendChild(rowDiv);
                idx ++;
            }

            function removeField(num) {
                $('.removeRow' + num).remove();
            }



            function callItemList() {
                return $.ajax({
                    url: '/item-ref',
                    type: 'GET',
                    success: function(data){
                        return data;
                    }
                });
            }
        </script>
       
    </body>
</html>